exec
(create-table foo
  [[x int] [y string] [z bool]]
  [[1 "one" true]
   [2 "two" false]
   [3 "three" false]
   [4 "four" true]]
  [[x_idx   [x]]
   [y_idx   [y]]
   [z_y_idx [z y]]])
----
ok

exec
(run foo)
----
[1 "one" true]
[2 "two" false]
[3 "three" false]
[4 "four" true]

exec
(run (order-by foo [y]))
----
[1 "one" true]
[2 "two" false]
[3 "three" false]
[4 "four" true]

exec
(run (select foo (= x 1)))
----
[1 "one" true]

exec
(run (select foo (= x 2)))
----
[2 "two" false]

exec
(run (select foo (= z true)))
----
[1 "one" true]
[4 "four" true]

exec
(run (select foo (= z false)))
----
[2 "two" false]
[3 "three" false]
