ddl
(create-table abc
  [[a int] [b int] [c int]]
  [[1 2 3]
   [4 5 6]
   [7 8 9]]
  [[a_idx   [a]]
   [b_idx   [b]]
   [c_b_idx [c b]]])
----
ok

ddl
(create-table xyz
  [[x int] [y int] [z int]]
  [[1 2 3]
   [4 5 6]
   [7 8 9]]
  [[x_idx   [x]]
   [z_y_idx [z y]]])
----
ok

plan
(select
  (project (join abc xyz true) [a b])
  (= a 1))
----
-> Select
 -> Project [] [1 2]
  -> Join
   -> Scan [1 2 3] @a_idx
   -> Scan [4 5 6] @x_idx
   -> Filters
 -> Filters
  -> Eq
   -> ColRef (1)
   -> Constant (1)

plan-memo
(select
  (join abc xyz true)
  (= a 1))
----
G1
  - Join G2 G3 G4
G2
  - Select G5 G6
  - Scan [1 2 3] @a_idx [1 - 1]
G3
  - Scan [4 5 6] @x_idx
  - Scan [4 5 6] @z_y_idx
G4
  - Filters
G5
  - Scan [1 2 3] @a_idx
  - Scan [1 2 3] @b_idx
  - Scan [1 2 3] @c_b_idx
G6
  - Filters G7
G7
  - Eq G8 G9
G8
  - ColRef (1)
G9
  - Constant (1)

plan-full
(select
  (join abc xyz true)
  (= a 1))
----
-> Join
 -> Scan [1 2 3] @a_idx [1 - 1]
 -> Scan [4 5 6] @x_idx
 -> Filters

plan-memo
(select abc (= a 1))
----
G1
  - Select G2 G3
  - Scan [1 2 3] @a_idx [1 - 1]
G2
  - Scan [1 2 3] @a_idx
  - Scan [1 2 3] @b_idx
  - Scan [1 2 3] @c_b_idx
G3
  - Filters G4
G4
  - Eq G5 G6
G5
  - ColRef (1)
G6
  - Constant (1)

plan-full
(select abc (= a 1))
----
-> Scan [1 2 3] @a_idx [1 - 1]
