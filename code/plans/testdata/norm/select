ddl
(create-table abc
  [[a int] [b int] [c int]]
  [[1 2 3]
   [4 5 6]
   [7 8 9]]
  [[a_idx   [a]]
   [b_idx   [b]]
   [c_b_idx [c b]]])
----
ok

ddl
(create-table xyz
  [[x int] [y int] [z int]]
  [[1 2 3]
   [4 5 6]
   [7 8 9]]
  [[x_idx   [x]]
   [z_y_idx [z y]]])
----
ok

plan
(select
  (project (join abc xyz true) [a b])
  (= a 1))
----
-> Select
 -> Project [] [1 2]
  -> Join
   -> Scan [1 2 3] @0
   -> Scan [4 5 6] @0
   -> Filters
 -> Filters
  -> Eq
   -> ColRef (1)
   -> Constant (1)

plan-memo
(select abc (= a 1))
----
G1
  - Select G2 G3
  - Scan [1 2 3] @0 [1 - 1]
  - Select G4 G3
  - Select G5 G3
G2
  - Scan [1 2 3] @0
G3
  - Filters G6
G4
  - Scan [1 2 3] @1
G5
  - Scan [1 2 3] @2
G6
  - Eq G7 G8
G7
  - ColRef (1)
G8
  - Constant (1)

plan-full
(select abc (= a 1))
----
-> Scan [1 2 3] @0 [1 - 1]
