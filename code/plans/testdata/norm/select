ddl
(create-table abc
  [[a int] [b int] [c int]]
  [[1 2 3]
   [4 5 6]
   [7 8 9]]
  [[a_idx   [a]]
   [b_idx   [b]]
   [c_b_idx [c b]]])
----
ok

ddl
(create-table xyz
  [[x int] [y int] [z int]]
  [[1 2 3]
   [4 5 6]
   [7 8 9]]
  [[x_idx   [x]]
   [z_y_idx [z y]]])
----
ok

plan
(select
  (project (join abc xyz true) [a b])
  (= a 1))
----
-> Select
 -> Project [] [1 2]
  -> Join
   -> Scan [1 2 3] @0
   -> Scan [4 5 6] @0
   -> Filters
 -> Filters
  -> Eq
   -> ColRef (1)
   -> Constant (1)

plan-memo
(select abc (= a 1))
----
G1
  - Select G2 G3
  - Scan [1 2 3] @0 [1 - 1]
G2
  - Scan [1 2 3] @0
  - Scan [1 2 3] @1
  - Scan [1 2 3] @2
G3
  - Filters G4
G4
  - Eq G5 G6
G5
  - ColRef (1)
G6
  - Constant (1)

plan-full
(select abc (= a 1))
----
-> Scan [1 2 3] @0 [1 - 1]

plan
(order-by abc [b])
----
-> Root (required ordering: [2]) 
 -> Scan [1 2 3] @0

plan-memo
(order-by abc [b])
----
G1
  - Root G2 (required ordering: [2]) 
G2
  - Scan [1 2 3] @0
  - Scan [1 2 3] @1
  - Scan [1 2 3] @2

plan-full
(order-by abc [b])
----
-> Root (required ordering: [2]) 
 -> Scan [1 2 3] @1
