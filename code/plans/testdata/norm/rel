ddl
(create-table abc
  [[a int] [b int] [c int]])
----
ok

ddl
(create-table xyz
  [[x int] [y int] [z int]])
----
ok

plan
xyz
----
-> Scan [1 2 3] @default

plan
(select xyz (= x 3))
----
-> Select
 -> Scan [1 2 3] @default
 -> Filters
  -> Eq
   -> ColRef (1)
   -> Constant (3)

plan
(project xyz
  [(+ (+ x y) z)
   (+ x (+ y z))
   (+ x (+ y 0))])
----
-> Project [4 5 6] []
 -> Scan [1 2 3] @default
 -> Plus
  -> ColRef (1)
  -> Plus
   -> ColRef (2)
   -> ColRef (3)
 -> Plus
  -> ColRef (1)
  -> Plus
   -> ColRef (2)
   -> ColRef (3)
 -> Plus
  -> ColRef (1)
  -> ColRef (2)

plan
(join abc xyz (= a x))
----
-> Join
 -> Scan [1 2 3] @default
 -> Scan [4 5 6] @default
 -> Filters
  -> Eq
   -> ColRef (1)
   -> ColRef (4)

plan
(select
 (join abc xyz (= a x))
 (= b 3))
----
-> Join
 -> Select
  -> Scan [1 2 3] @default
  -> Filters
   -> Eq
    -> ColRef (2)
    -> Constant (3)
 -> Scan [4 5 6] @default
 -> Filters
  -> Eq
   -> ColRef (1)
   -> ColRef (4)

plan
(select
 (join abc xyz (= a x))
 (= y 3))
----
-> Join
 -> Scan [1 2 3] @default
 -> Select
  -> Scan [4 5 6] @default
  -> Filters
   -> Eq
    -> ColRef (5)
    -> Constant (3)
 -> Filters
  -> Eq
   -> ColRef (1)
   -> ColRef (4)

plan
(select
 (join abc xyz (= a x))
 (and (= y 3) (= c 3)))
----
-> Join
 -> Select
  -> Scan [1 2 3] @default
  -> Filters
   -> Eq
    -> ColRef (3)
    -> Constant (3)
 -> Select
  -> Scan [4 5 6] @default
  -> Filters
   -> Eq
    -> ColRef (5)
    -> Constant (3)
 -> Filters
  -> Eq
   -> ColRef (1)
   -> ColRef (4)

plan
(select
 (join abc xyz (= a x))
 (and (= y 3) (= c 3)))
----
-> Join
 -> Select
  -> Scan [1 2 3] @default
  -> Filters
   -> Eq
    -> ColRef (3)
    -> Constant (3)
 -> Select
  -> Scan [4 5 6] @default
  -> Filters
   -> Eq
    -> ColRef (5)
    -> Constant (3)
 -> Filters
  -> Eq
   -> ColRef (1)
   -> ColRef (4)
